#aliases

#for traversing directory tree
alias ..='cd ..'
alias ...='cd ../..'

# enable color support of ls
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# For finding particular fonts
alias findfont='fc-list|grep -i' 

# Custom script for bringing window to focus
alias opfoc='~/Files/config_files/custom_scripts/open_or_get_focus.sh'

# Setting alias for neovim
alias vim='nvim'

# Using exa program instead of ls
alias ls='exa --icons'
